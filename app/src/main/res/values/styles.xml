<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlarmTimeText">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AlarmBackground">
        <item name="android:background">@drawable/alarm_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="NormalAlarm">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NormalAlarm.Name">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlarmLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TimePicker">
        <item name="android:headerBackground">@color/colorBackground</item>
        <item name="android:background">@drawable/form_item_bg_normal</item>
    </style>

    <style name="AlarmForm">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="AlarmForm.Container">
        <item name="android:background">@drawable/form_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AlarmForm.Label">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="AlarmForm.Input">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextDarkest</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ActiveAlarm">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ActiveAlarm.Time">
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ActiveAlarm.Name">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="ActiveAlarm.Stop">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/stop_button_color</item>
        <item name="android:background">@drawable/stop_button_bg</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">30dp</item>
    </style>

    <style name="ActiveAlarm.Snooze">
        <item name="android:background">@drawable/snooze_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="ActiveAlarm.SnoozeIcon">
        <item name="android:tint">@color/snooze_button_color</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ActiveAlarm.SnoozeText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/snooze_button_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Preference">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="Preference.Container">
        <item name="android:background">@drawable/form_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Preference.Label">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="Preference.Input">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextDarkest</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
