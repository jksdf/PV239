<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlarmTimeText">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NormalAlarm">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NormalAlarm.Name">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlarmLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TimePicker">
        <item name="android:headerBackground">@color/colorBackground</item>
        <item name="android:background">@drawable/form_item_bg_normal</item>
    </style>

    <style name="AlarmForm">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>


    <style name="AlarmForm.Container">
        <item name="android:background">@drawable/form_item_bg</item>
    </style>

    <style name="AlarmForm.Label">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="AlarmForm.Input">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextDarkest</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>
